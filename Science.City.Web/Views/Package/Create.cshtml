@model Science.City.Web.ViewModels.PackageViewModel


<div class="row">

	<div class="col-md-4">
		<form asp-action="Index">
			<div class="form-group">
				<label asp-for="PackageName" class="control-label"></label>
				<input asp-for="PackageName" class="form-control" />
				<span asp-validation-for="PackageName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="RateofPackage" class="control-label"></label>
				<input asp-for="RateofPackage" class="form-control" />
				<span asp-validation-for="RateofPackage" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ShowsInPack" class="control-label"></label>
				<input type="checkbox" asp-for="RateofPackage" class="form-control" />
				<span asp-validation-for="RateofPackage" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PackageType" class="control-label"></label>
				<select></select>
				<span asp-validation-for="PackageType" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Classification" class="control-label"></label>
				<input type="radio" name="Classification" value="Frequent" />
				<input type="radio" name="Classification" value="Non Frequent" />
				<span asp-validation-for="PackageType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>